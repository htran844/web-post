<div class="card card-body">
    <h3>Tao bai viet moi</h3>
    <form action="/posts" method="post">
        <div class="form-group">
            <label for="title">Tieu de</label>
            <input type="text" class="form-control" name="title" value="{{title}}" required>
        </div>
        <div class="form-group">
            <label for="text">Noi dung</label>
            <textarea class="form-control" name="text" required>{{text}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Tao post moi</button>
    </form>
</div>